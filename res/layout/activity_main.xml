<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->

    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!-- The navigation drawer -->

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/nav_drawer_map_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_map"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:gravity="left|center_vertical"
            android:onClick="navDrawerOutItemClick"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/nav_drawer_map"
            android:textStyle="bold"
            android:textColor="@@android:color/black" />

        <ExpandableListView
            android:id="@+id/drawer_list"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp" />
         <TextView
            android:id="@+id/nav_drawer_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_info"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:gravity="left|center_vertical"
            android:onClick="navDrawerOutItemClick"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/nav_drawer_info"
            android:textStyle="bold"
            android:textColor="@@android:color/black" />
             <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ligth_green"/>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>